@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div ng-init="getCarouselImages()">
    <form action="#">
        @*File Input*@
        <div class="file-field input-field">
            <div class="btn">
                <span>File</span>
                <input type="file" id="fileInput">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
        @*button*@
        <button class="btn waves-effect waves-light blue" type="button" ng-click="uploadfile()">
            <i class="material-icons left">cloud_upload</i>
            Upload
        </button>
    </form>

    @*Carousel*@
    <div class="carousel">
        <a class="carousel-item" href="#{{$index}}!" ng-repeat="cimage in carouselImages">
            <img src="{{cimage.imagePath}}">
        </a>
    </div>
</div>