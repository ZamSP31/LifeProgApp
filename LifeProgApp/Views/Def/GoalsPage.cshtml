@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    * {
        box-sizing: border-box;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        background: #fff;
        color: #000;
    }

    .container {
        padding: 24px 36px;
    }

    .flex {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
        align-items: flex-start;
    }

    .card {
        background: #fff;
        border: 1px solid #e6e6e6;
        border-radius: 8px;
        padding: 16px;
    }

    /* Today's quest card */
    .quest-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #f1f1f1;
        font-size: 14px;
    }

        .quest-item:last-child {
            border-bottom: none;
        }

    .quest-left {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        min-width: 0;
        flex: 1;
    }

    .quest-text {
        min-width: 0;
        flex: 1;
    }

        .quest-text .title {
            display: block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .quest-text .subtitle {
            display: block;
            font-size: 12px;
            color: #777;
            margin-top: 4px;
        }

    .quest-right {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .xp {
        color: #111;
        font-weight: 600;
        font-size: 13px;
        flex-shrink: 0;
    }

    .line-through {
        text-decoration: line-through;
        color: #999;
    }

    .progress-bar {
        height: 8px;
        background: #f1f1f1;
        border-radius: 6px;
        overflow: hidden;
        margin-top: 12px;
    }

        .progress-bar > span {
            display: block;
            height: 100%;
            background: #000;
            width: 65%;
        }

    /* Right column */
    .stats, .quick-actions {
        margin-bottom: 16px;
    }

        .quick-actions button {
            display: block;
            width: 100%;
            padding: 8px;
            border: 1px solid #d6d6d6;
            background: #fff;
            margin-top: 8px;
            cursor: pointer;
            border-radius: 6px;
            font-size: 14px;
        }

            .quick-actions button:hover {
                background: #f5f5f5;
            }

    /* Goals row */
    .goals {
        margin-top: 28px;
    }

    .goal-list {
        display: flex;
        gap: 16px;
        margin-top: 12px;
    }

    .goal-card {
        flex: 1;
        padding: 12px;
        border: 1px solid #e6e6e6;
        border-radius: 8px;
        font-size: 14px;
    }

    .goal-progress {
        height: 8px;
        background: #f1f1f1;
        border-radius: 6px;
        overflow: hidden;
        margin: 8px 0;
    }

        .goal-progress span {
            display: block;
            height: 100%;
            background: #000;
            width: 45%;
        }

    /* Material Icons */
    .material-icons {
        font-family: 'Material Icons';
        font-weight: normal;
        font-style: normal;
        font-size: 24px;
        display: inline-block;
        line-height: 1;
        text-transform: none;
        letter-spacing: normal;
        word-wrap: normal;
        white-space: nowrap;
        direction: ltr;
    }
</style>

<div ng-controller="LifeProgAppController" ng-init="loadTodaysQuests()">
    <div class="container">
        <div class="flex">
            <!-- Left (main) -->
            <div>
                <div class="card">
                    <h3 style="margin:0 0 12px 0; font-size:16px;">
                        Today's Quest
                        <span style="float:right; font-size:12px; color:#777;">{{today | date:'MMMM d, yyyy'}}</span>
                    </h3>

                    <!-- Quest Items -->
                    <div class="quest-item" ng-repeat="quest in todaysQuests">
                        <div class="quest-left">
                            <label class="custom-checkbox" aria-label="{{quest.title}}">
                                <input type="checkbox"
                                       ng-model="quest.isCompleted"
                                       ng-disabled="quest.isCompleted" />
                                <span class="box" aria-hidden="true"></span>
                            </label>

                            <div class="quest-text">
                                <span class="title" ng-class="{'line-through': quest.isCompleted}">{{quest.title}}</span>
                                <span class="subtitle">{{quest.description}}</span>
                            </div>
                        </div>

                        <div class="quest-right">
                            <div class="xp">+{{quest.xpReward}} XP</div>
                        </div>
                    </div>

                    <!-- Default quests if no data from database -->
                    <div ng-if="!todaysQuests || todaysQuests.length === 0">
                        <!-- Quest 1 -->
                        <div class="quest-item">
                            <div class="quest-left">
                                <label class="custom-checkbox" aria-label="Morning Meditation">
                                    <input type="checkbox" />
                                    <span class="box" aria-hidden="true"></span>
                                </label>

                                <div class="quest-text">
                                    <span class="title">Morning Meditation</span>
                                    <span class="subtitle">10 minutes of mindfulness practice</span>
                                </div>
                            </div>
                            <div class="quest-right">
                                <div class="xp">+15 XP</div>
                            </div>
                        </div>

                        <!-- Quest 2 -->
                        <div class="quest-item">
                            <div class="quest-left">
                                <label class="custom-checkbox" aria-label="Read 20 Pages">
                                    <input type="checkbox" />
                                    <span class="box" aria-hidden="true"></span>
                                </label>

                                <div class="quest-text">
                                    <span class="title">Read 20 Pages</span>
                                    <span class="subtitle">Continue your current book</span>
                                </div>
                            </div>
                            <div class="quest-right">
                                <div class="xp">+20 XP</div>
                            </div>
                        </div>

                        <!-- Quest 3 -->
                        <div class="quest-item">
                            <div class="quest-left">
                                <label class="custom-checkbox" aria-label="30-Minute Walk">
                                    <input type="checkbox" checked />
                                    <span class="box" aria-hidden="true"></span>
                                </label>

                                <div class="quest-text">
                                    <span class="title line-through">30-Minute Walk</span>
                                    <span class="subtitle">Get some fresh air and exercise</span>
                                </div>
                            </div>
                            <div class="quest-right">
                                <div class="xp">+25 XP</div>
                            </div>
                        </div>
                    </div>

                    <div class="progress-bar"><span style="width:65%"></span></div>
                    <p style="font-size:12px; color:#777; margin-top:8px;">Daily Progress — 260/400 XP</p>
                </div>
            </div>

            <!-- Right (sidebar) -->
            <div>
                <div class="card stats">
                    <h3 style="margin:0 0 8px 0; font-size:16px;">Your Stats</h3>
                    <p style="margin:6px 0;">Level: 12</p>
                    <p style="margin:6px 0;">Total XP: 2,450</p>
                    <p style="margin:6px 0;">Streak: 7 days</p>
                    <p style="margin:6px 0;">Completed Goals: 23</p>
                </div>

                <div class="card quick-actions">
                    <h3 style="margin:0 0 8px 0; font-size:16px;">Quick Actions</h3>
                    <button>Add Custom Quest</button>
                    <button>Set New Goal</button>
                    <button ng-click="redirectToGallery()">View Photo Gallery</button>
                </div>
            </div>
        </div>

        <!-- Long-term goals -->
        <div class="goals">
            <div style="display:flex;justify-content:space-between;align-items:center;">
                <h3 style="margin:0;">Long-term Goals</h3>
                <button style="padding:6px 10px;border:1px solid #d6d6d6;background:#fff;border-radius:6px;cursor:pointer;">+ Add Goal</button>
            </div>

            <div class="goal-list">
                <div class="goal-card">
                    <h4 style="margin:0 0 6px 0;">Learn Spanish</h4>
                    <p style="margin:0 0 8px 0; font-size:13px; color:#666;">Achieve conversational fluency in Spanish</p>
                    <div class="goal-progress"><span style="width:65%"></span></div>
                    <p style="font-size:12px; color:#777; margin:6px 0 0 0;">Target: December 2025</p>
                </div>

                <div class="goal-card">
                    <h4 style="margin:0 0 6px 0;">Run Marathon</h4>
                    <p style="margin:0 0 8px 0; font-size:13px; color:#666;">Complete a full 26.2 mile marathon</p>
                    <div class="goal-progress"><span style="width:30%"></span></div>
                    <p style="font-size:12px; color:#777; margin:6px 0 0 0;">Target: October 2025</p>
                </div>

                <div class="goal-card">
                    <h4 style="margin:0 0 6px 0;">Save $10,000</h4>
                    <p style="margin:0 0 8px 0; font-size:13px; color:#666;">Build emergency fund for financial security</p>
                    <div class="goal-progress"><span style="width:45%"></span></div>
                    <p style="font-size:12px; color:#777; margin:6px 0 0 0;">Target: August 2025</p>
                </div>
            </div>
        </div>
    </div>
</div>