@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>One % Login</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            background: #fff;
            color: #000;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 30px;
            border-bottom: 1px solid #ccc;
        }

            .navbar .logo {
                display: flex;
                align-items: center;
                font-weight: bold;
            }

                .navbar .logo span {
                    margin-left: 6px;
                }

            .navbar ul {
                list-style: none;
                display: flex;
                gap: 30px;
            }

                .navbar ul li {
                    font-size: 14px;
                    cursor: pointer;
                }

            .navbar .user-actions {
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .navbar button {
                border: 1px solid #000;
                background: #fff;
                padding: 5px 12px;
                border-radius: 8px;
                cursor: pointer;
            }

        /* Main Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 60px auto;
            max-width: 900px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
        }

        /* Quote Section */
        .quote-box {
            flex: 1;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 50px;
            font-size: 20px;
            text-align: center;
            border-right: 1px solid #eee;
        }

            .quote-box p {
                font-weight: 500;
            }

            .quote-box span {
                display: block;
                margin-top: 10px;
                font-size: 14px;
                color: #666;
                font-style: italic;
            }

        /* Login Box */
        .login-box {
            flex: 1;
            background: #000;
            color: #fff;
            padding: 50px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .login-box h2 {
                margin-bottom: 30px;
                text-align: center;
            }

            .login-box input {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border-radius: 6px;
                border: none;
                outline: none;
            }

            .login-box .forgot {
                font-size: 12px;
                margin-bottom: 20px;
                color: #ccc;
                cursor: pointer;
            }

            .login-box button {
                width: 100%;
                padding: 12px;
                border: none;
                background: #fff;
                color: #000;
                border-radius: 6px;
                font-weight: bold;
                cursor: pointer;
                margin-bottom: 20px;
            }

            .login-box .divider {
                border-top: 1px solid #444;
                margin: 20px 0;
            }

            .login-box .social {
                text-align: center;
                font-size: 14px;
            }

            .login-box .social-icons {
                display: flex;
                justify-content: center;
                gap: 15px;
                margin-top: 10px;
            }

                .login-box .social-icons div {
                    width: 35px;
                    height: 35px;
                    border-radius: 50%;
                    border: 1px solid #fff;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    cursor: pointer;
                }

        
    </style>
</head>
<body>

   

    <!-- Content -->
    <div class="container">
        <!-- Quote -->
        <div class="quote-box">
            <div>
                <p>Just 1% better everyday is 37 times better in a year</p>
                <span>James Clear, Atomic Habits</span>
            </div>
        </div>

        <!-- Login -->
        <div class="login-box">
            <h2>Login</h2>
            <input type="text" placeholder="Username">
            <input type="password" placeholder="Password">
            <div class="forgot">Forgot Password</div>
            <button>Login</button>
            <div class="divider"></div>
            <div class="social">
                Login with
                <div class="social-icons">
                    <div>G</div>
                    <div></div>
                </div>
            </div>
        </div>
    </div>

   
</body>
</html>
