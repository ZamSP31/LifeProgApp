    <script>
        $(document).ready(function () {
            // SweetAlert Button Click Event
            $('#swalButton').click(function () {
                Swal.fire({
                    title: 'Welcome!',
                    text: 'This is a SweetAlert2 popup example',
                    icon: 'success',
                    confirmButtonText: 'Cool!',
                    confirmButtonColor: '#0d6efd',
                    showCancelButton: true,
                    cancelButtonText: 'Close',
                    footer: '<a href="#">Learn more about SweetAlert2</a>'
                });
            });

            // Example: Add SweetAlert on row click
            $('tbody tr').click(function () {
                const firstName = $(this).find('td:eq(1)').text();
                const lastName = $(this).find('td:eq(2)').text();
                const email = $(this).find('td:eq(3)').text();

                Swal.fire({
                    title: `${firstName} ${lastName}`,
                    html: `
                            <p><strong>Email:</strong> ${email}</p>
                            <p>Click to view more details</p>
                        `,
                    icon: 'info',
                    confirmButtonText: 'OK'
                });
            });
        });
    </script>
